<div class="@NavMenuCssClass sidebar shadow-sm" @onclick="ToggleNavMenu">
    <nav class="nav flex-column">
        <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
            <i class="bi bi-house-door-fill me-2"></i> Home
        </NavLink>
        <NavLink class="nav-link" href="counter">
            <i class="bi bi-plus-square-fill me-2"></i> Counter
        </NavLink>
        <!-- Future role-based item -->
        @* <NavLink class="nav-link" href="admin" conditionally shown for admin *@
    </nav>
</div>
<style>
    .sidebar {
        background: linear-gradient(135deg, #212529, #343a40);
        color: white;
        padding: 1rem;
        border-right: 1px solid rgba(255, 255, 255, 0.1);
        min-height: 100vh;
        transition: all 0.3s ease;
        width: 250px;
    }

        .sidebar .nav-link {
            color: #ccc;
            padding: 0.75rem 1rem;
            border-radius: 8px;
            transition: background-color 0.2s ease;
            font-weight: 500;
        }

            .sidebar .nav-link:hover,
            .sidebar .nav-link.active {
                background-color: rgba(255, 255, 255, 0.1);
                color: #fff;
            }
</style>
@code {
    private bool collapseNavMenu = true;
    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : "expanded sidebar";

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
