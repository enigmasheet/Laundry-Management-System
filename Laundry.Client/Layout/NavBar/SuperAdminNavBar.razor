<nav class="nav flex-column role-navbar" aria-label="Super Admin Navigation">
    <h5 class="sidebar-title">Super Admin Panel</h5>

    @foreach (var item in MenuItems)
    {
        <NavLink class="nav-link" href="@item.Href" title="@item.Title" Match="@item.Match" ActiveClass="active">
            <i class="bi @item.IconClass me-2"></i>
            <span class="link-text">@item.LinkText</span>
        </NavLink>
    }
</nav>

@code {
    private record MenuItem(string Href, string Title, string IconClass, string LinkText, NavLinkMatch Match);

    private readonly List<MenuItem> MenuItems = new()
    {
        new MenuItem("/", "Dashboard", "bi-house-door-fill", "Dashboard", NavLinkMatch.All),
        new MenuItem("admin/super", "Manage Users", "bi-person-gear", "Manage Users", NavLinkMatch.Prefix),
        new MenuItem("reports", "Reports", "bi-bar-chart-fill", "Reports", NavLinkMatch.Prefix),
        new MenuItem("settings", "Settings", "bi-gear-fill", "Settings", NavLinkMatch.Prefix),
    };
}
