@code {
    // List of menu items: href, tooltip title, Bootstrap icon class, display text, NavLink match mode
    private readonly List<(string href, string title, string iconClass, string linkText, NavLinkMatch match)> menuItems = new()
    {
        ("/Home", "Home", "bi-house-door-fill", "Home", NavLinkMatch.All),
        ("/order", "Place Order", "bi-cart-plus-fill", "Place Order", NavLinkMatch.Prefix),
        ("/orders", "Order History", "bi-clock-history", "Order History", NavLinkMatch.Prefix),
        ("/profile", "My Profile", "bi-person-circle", "My Profile", NavLinkMatch.Prefix),
    };
}

<nav class="nav flex-column role-navbar" aria-label="Customer Navigation">
    <h5 class="sidebar-title">Customer Panel</h5>

    @foreach (var item in menuItems)
    {
        <NavLink class="nav-link" href="@item.href" title="@item.title" Match="@item.match"
                 ActiveClass="active">
            <i class="bi @item.iconClass me-2"></i>
            <span class="link-text">@item.linkText</span>
        </NavLink>
    }
</nav>
