@using Microsoft.AspNetCore.Components
@inject AuthenticationStateProvider AuthenticationStateProvider

<nav class="nav flex-column role-navbar" aria-label="Vendor Admin Navigation">
    <h5 class="sidebar-title">Vendor Admin Panel</h5>

    <NavLink class="nav-link" href="Order/Dashboard" title="Dashboard" Match="NavLinkMatch.All">
        <i class="bi bi-house-door-fill me-2"></i>
        <span class="link-text">Dashboard</span>
    </NavLink>

    @if (IsVendorAdmin)
    {
        <NavLink class="nav-link" href="admin/vendor" title="Manage Employees">
            <i class="bi bi-people-fill me-2"></i>
            <span class="link-text">Manage Employees</span>
        </NavLink>

        <NavLink class="nav-link" href="reports" title="Reports">
            <i class="bi bi-clipboard-data me-2"></i>
            <span class="link-text">Reports</span>
        </NavLink>
    }

    @if (IsEmployee)
    {
        <NavLink class="nav-link" href="orders" title="Orders">
            <i class="bi bi-box-seam me-2"></i>
            <span class="link-text">Orders</span>
        </NavLink>
    }
</nav>

@code {
    [Parameter]
    public string? UserRole { get; set; }

    private bool IsVendorAdmin => UserRole == "VendorAdmin";
    private bool IsEmployee => UserRole == "Employee";
}
