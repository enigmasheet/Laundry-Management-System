@page "/"
@attribute [Authorize(Roles = "Customer,SuperAdmin,VendorAdmin")]
@using Laundry.Client.Components
@using Laundry.Shared.DTOs
@inject IVendorService VendorService

<PageTitle>Home</PageTitle>

<h1>Welcome!</h1>
<p>Browse available laundry vendors below:</p>

@if (vendors == null)
{
    <p>Loading vendors...</p>
}
else if (!vendors.Any())
{
    <p>No vendors available at the moment.</p>
}
else
{
    <div class="d-flex flex-wrap gap-3">
        @foreach (var vendor in vendors)
        {
            <VendorCard Vendor="vendor" />
        }
    </div>
}

@code {
    private List<VendorDto>? vendors;

    protected override async Task OnInitializedAsync()
    {
        vendors = await VendorService.GetAllVendorsAsync();
    }
}
